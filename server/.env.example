# Server Configuration
# Port for HTTPS server
HTTPS_PORT=3003

# Port for HTTP redirect server
HTTP_PORT=3000

# Environment
# Development or production
NODE_ENV=development

# JWT Configuration
# Secret keys for JWT token generation (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# JWT Token Expiration
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Rate Limiting
# Maximum number of auth requests per window
AUTH_RATE_LIMIT_MAX=5
# Rate limit window in milliseconds (default: 15 minutes)
AUTH_RATE_LIMIT_WINDOW=900000

# Security
# Enable HTTPS requirement (true/false)
REQUIRE_HTTPS=true

# CORS Configuration
# Allowed origins (comma-separated)
ALLOWED_ORIGINS=https://localhost:5173,https://localhost:5174

# Cookie Configuration
# Cookie domain (leave blank for same-origin)
COOKIE_DOMAIN=

# Password Security
# Argon2 memory cost (KB)
ARGON2_MEMORY_COST=65536
# Argon2 time cost (iterations)
ARGON2_TIME_COST=3
# Argon2 parallelism
ARGON2_PARALLELISM=4
